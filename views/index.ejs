<body>
    
    <form class = "mainform" method = "post" action = '/employee/index'>
        <h2>Add New Employee</h2>

        <label>Name</label>
        <input type = 'text' name = "name" placeholder = "Full Name">

        <label>Email</label>
        <input type = 'text' name = "email" placeholder = "example@email.com">

